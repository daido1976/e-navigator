<h1>Users index</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th>age</th>
      <th>gender</th>
      <th>school</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.age if user.birthday.present? %></td>
        <td><%= t user.gender if user.gender.present? %></td>
        <td><%= user.school %></td>
        <td><%= link_to "Interviews", user_interviews_path(user), class: "btn btn-primary" %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
